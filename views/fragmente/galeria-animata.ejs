<section id="gal-animat">
    <%var how_many_photos=0;%>
    <h3 id="gal-animat0">Gallery</h3>
    <div id="galerie2" class="galerie">
        <div class="grid_2col">
    <% for (let imag of locals.imagini){
    if(how_many_photos<9 && imag.titlu.length<15){%>
        <figure class="gal-animat1">
            <picture>
                <source srcset="<%- imag.mic %>" media="(max-width:500px)"/>
                <img src=<%- imag.mare %> alt="<%imag.alt%>" title="<%imag.text_descriere%>">
            </picture>
            <figcaption><%-imag.titlu%></figcaption>
        </figure>
    <%how_many_photos++;
    }
    }%>
        </div>
    </div>
</section>
